<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/img_bkh"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/imagem_bnh_lista"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_gravity="left"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/img_ds"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/imagem_ds_lista"
        android:layout_marginTop="-200sp"
        android:layout_gravity="right"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/img_pnl"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/imagem_tpn_lista"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_gravity="left"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/img_op"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:src="@drawable/imagem_op_lista"
        android:layout_marginTop="-200sp"
        android:layout_gravity="right"
        android:clickable="true"/>


</LinearLayout>