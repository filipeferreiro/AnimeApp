<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="@color/background"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_bkh"
            android:layout_width="500px"
            android:layout_height="700px"
            android:layout_gravity="left"
            android:clickable="true"
            android:src="@drawable/imagem_bnh_lista" />

        <ImageView
            android:id="@+id/img_ds"
            android:layout_width="500px"
            android:layout_height="700px"
            android:layout_gravity="right"
            android:layout_marginLeft="10sp"
            android:clickable="true"
            android:src="@drawable/imagem_ds_lista" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:layout_marginTop="20sp">

    <ImageView
        android:id="@+id/img_pnl"
        android:layout_width="500px"
        android:layout_height="700px"
        android:src="@drawable/imagem_tpn_lista"
        android:layout_gravity="left"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/img_op"
        android:layout_width="500px"
        android:layout_height="700px"
        android:src="@drawable/imagem_op_lista"
        android:layout_marginLeft="10sp"
        android:layout_gravity="right"
        android:clickable="true"/>

    </LinearLayout>
</LinearLayout>